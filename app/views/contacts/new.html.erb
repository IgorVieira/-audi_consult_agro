<div class="container contact">
			<hr class="intro-divider">
			<div class="row">
				<div class="col-md-4">
					<div class="clearfix"></div>
					<h2 class="section-heading">Contato</h2>
					<p class="lead">
						Lorem ipsum dolor sit amet, consectetur adipisicing elit.
						Cumque illo consectetur ab sint tempore eum.
						Consequatur architecto praesentium, beatae,
						libero aliquam sapiente rerum iure saepe voluptates
					</p>
				</div>
				<div class="col-md-2"></div>
				<div class="col-md-6">



				<%= form_for @contact do |f| %>
					<div class="form-horizontal">
						<fieldset class="well">
							<div class="form-group">
								<%= f.label :name,'Nome:', class:"col-lg-2 control-label" %>
								<div class="col-lg-10">
									<%= f.text_field :name, required:true, class:"form-control"%>
								</div>
							</div>
							<div class="form-group">
								<%= f.label :email,'Email:', class:"col-lg-2 control-label" %>
								<div class="col-lg-10">
									<%= f.text_field :email, required:true, class:"form-control"%>
								</div>
							</div>
							<div class="form-group">
								<%= f.label :subject_contact,'Assunto:', class:"col-lg-2 control-label" %>
								<div class="col-lg-10">
									<%= f.text_field :subject_contact, required:true, class:"form-control"%>
								</div>
							</div>

								<div class="form-group">
									<%= f.label :subject_contact,'Mensagem:', class:"col-lg-2 control-label" %>
									<div class="col-lg-10">
										<%= f.text_area :message, class:'form-control'%><br>
									</div>
							</div>

							<%= f.submit 'Enviar',  class:"btn btn-default btn-block" %><br>
						</fieldset>
					</div>
					
					<% end %>


				</div>
			</div>
			<hr class="intro-divider">
		</div>
